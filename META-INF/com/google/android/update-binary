#!/sbin/sh
# Ubuntu Touch Flashable Zip
# Base Flashable Zip With Erfan
# Create Flashable Zip With Nobi Nobita
# Based on anykernel2 script by osm0sis

OUTFD=/proc/self/fd/$2;
ZIP="$3";
DIR=`dirname "$ZIP"`;

ui_print() {
  until [ ! "$1" ]; do
    echo -e "ui_print $1\nui_print" > $OUTFD;
    shift;
  done;
}
show_progress() { echo "progress $1 $2" > $OUTFD; }
set_perm_recursive() {
  dirs=$(echo $* | $bb awk '{ print substr($0, index($0,$5)) }');
  for i in $dirs; do
    chown -R $1.$2 $i; chown -R $1:$2 $i;
    find "$i" -type d -exec chmod $3 {} +;
    find "$i" -type f -exec chmod $4 {} +;
  done;
}
abort() { ui_print "$*"; umount /vendor; umount /data; exit 1; }

show_progress 1.34 4;
ui_print " ";
ui_print " ";
ui_print " Base Flashable by erfanoabdi ";
ui_print " Create Flashable Zip, Build , Device Tree With Nobi Nobita ";
ui_print " UBPorts Build vs Device Tree@srmane4444 ";
ui_print " Fix Any Errors And Build, Device Tree@MarcoDS_bit ;
ui_print " Fix Bootloop ( Ui Not Works ) And Fix Any Errors @NotKit ";
ui_print " Xiaomi Redmi Note 5 Pro ";
ui_print " Code Name : Whyred ";
ui_print " ";
ui_print " ";
mount -o ro /vendor;
mount /data;

mkdir -p /data/ubports/bin;
cd /data/ubports;
ui_print "Copy Ubuntu To /data...";
unzip -o "$ZIP";
if [ $? != 0 -o -z "$(ls /data/ubports/tools)" ]; then
  abort "Unzip failed. Aborting...";
fi;
chmod -R 755 /data/ubports/tools /data/ubports/bin;
bb=/data/ubports/tools/busybox;

for i in $($bb --list); do
  $bb ln -s $bb /data/ubports/bin/$i;
done;
if [ $? != 0 -o -z "$(ls /data/ubports/bin)" ]; then
  abort "Recovery busybox setup failed. Aborting...";
fi;
PATH="/data/ubports/bin:$PATH" $bb ash /data/ubports/ubports.sh $2;
if [ $? != "0" ]; then
  abort;
fi;

rm -rf /data/ubports;

ui_print "Pack File To rootfs";

umount /vendor;
umount /data;
ui_print " ";
ui_print "Install Done Thanks You Install UbPorts .";
